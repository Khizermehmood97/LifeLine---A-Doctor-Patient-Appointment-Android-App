<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lifelinev2.Doctor.d_ProfileEdit">


    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/greycontainer"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">




    </LinearLayout>


    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/Phone"
        android:layout_below="@id/Phone"
        android:layout_marginTop="70dp"
        />

    <!--<Spinner-->
        <!--android:id="@+id/spinner_lastDonated"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_below="@id/Phone"-->
        <!--android:layout_marginTop="115dp" />-->

    <EditText
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="12"
        android:hint="Doctor Name :"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:hint="Timing :"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Schedule"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:hint="Phone# :"
        android:inputType="phone" />

    <RadioGroup
        android:id="@+id/radio_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Phone"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_alignEnd="@id/Phone"
        >

        <RadioButton
            android:id="@+id/radio_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/radio_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Leave"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Status :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@id/Phone"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@id/Phone"
        android:layout_marginTop="70dp"
        android:layout_marginStart="60dp"/>




    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Last Donated :"-->
        <!--android:textAppearance="@style/TextAppearance.AppCompat.Body2"-->
        <!--android:layout_below="@id/Phone"-->
        <!--android:layout_marginTop="115dp"-->
        <!--android:layout_marginStart="60dp"/>-->


    <Button
        android:id="@+id/Edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Phone"
        android:layout_marginTop="165dp"
        android:background="@drawable/rounded_btn1"
        android:textColor="#fff"
        android:text="@string/edit_btn"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="UPDATE INFO"
        android:textColor="@color/colorNavHeader"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

</RelativeLayout>
