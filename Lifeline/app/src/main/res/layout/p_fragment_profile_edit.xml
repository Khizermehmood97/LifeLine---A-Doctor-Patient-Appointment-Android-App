<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lifelinev2.Patient.ProfileEdit">


    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/greycontainer"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">




    </LinearLayout>


    <Spinner
        android:id="@+id/spinner_bloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/Phone"
        android:layout_below="@id/Phone"
        android:layout_marginTop="70dp"
        />

    <Spinner
        android:id="@+id/spinner_lastDonated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/Phone"
        android:layout_marginTop="115dp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="12"
        android:hint="Username :"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Allergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:hint="Allergies :"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Allergy"
        android:layout_marginTop="10dp"
        android:ems="12"
        android:hint="Phone# :"
        android:inputType="phone" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Group :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@id/Phone"
        android:layout_marginTop="70dp"
        android:layout_marginStart="60dp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Checkup :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@id/Phone"
        android:layout_marginTop="115dp"
        android:layout_marginStart="60dp"/>


    <Button
        android:id="@+id/Edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Phone"
        android:layout_marginTop="165dp"
        android:background="@drawable/rounded_btn1"
        android:textColor="#fff"
        android:text="@string/edit_btn"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="UPDATE INFO"
        android:textColor="@color/colorNavHeader"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

</RelativeLayout>
