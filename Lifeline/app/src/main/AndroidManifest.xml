<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lifelinev2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Patient.MainActivity"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Patient.SignUpActivity"
            android:parentActivityName=".Patient.MainActivity" />
        <activity
            android:name=".Patient.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Doctor.d_MainActivity"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Doctor.d_SignUpActivity"
            android:parentActivityName=".Doctor.d_MainActivity" />
        <activity
            android:name=".Doctor.d_ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>